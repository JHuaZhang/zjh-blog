{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist", // 排除输出目录
    "**/__tests__/**",
    "**/*.stories.tsx"
  ]
}
